{
    //editor
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "blink",
    "editor.fontSize": 14,
    "editor.fontFamily": "'Droid Sans Mono', 'sans serif', monospace",
    "editor.lineNumbers": "on",
    "editor.fontWeight": "normal",
    "editor.letterSpacing": 0.4,
    "editor.lineHeight": 1.1,
    "editor.autoClosingBrackets": "never",
    "editor.matchBrackets": "always",
    "editor.minimap.enabled": true,
    "editor.minimap.autohide": false,
    "editor.mouseWheelZoom": true,
    "editor.padding.top": 0,
    "editor.padding.bottom": 0,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.roundedSelection": true,
    "editor.scrollbar.scrollByPage": true,
    "editor.showUnused": true,
    "editor.tabSize": 4,
    "editor.wordWrap": "off",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true,
        "source.fixAll": true
    },
    //Python
	"python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python3",
	"python.envFile": "${workspaceFolder}/.env",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "${workspaceFolder}/venv/bin/black",
    "python.formatting.blackArgs": [],
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "${workspaceFolder}/venv/bin/flake8",
    "python.linting.flake8Args": [],
    "python.analysis.autoImportCompletions": false,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.importFormat": "absolute",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.typeCheckingMode": "basic",
    //Error Lens
    "errorLens.fontWeight": "bold",
    "errorLens.fontFamily": "monospace",
    "errorLens.fontStyleItalic": false,
    "errorLens.padding": "5",
    "errorLens.borderRadius": "5px",
    "errorLens.messageTemplate": "$message",
    "errorLens.messageEnabled": true,
    "errorLens.messageBackgroundMode": "line",
	"errorLens.warningGutterIconColor": "#ff942f",
	"errorLens.statusBarMessageType": "activeLine",
    //Material Icon Theme
    "material-icon-theme.activeIconPack": "react",
    "material-icon-theme.folders.theme": "specific",
    "material-icon-theme.saturation": 0.8,
    "material-icon-theme.opacity": 0.8,
    //autoDocstring - Python Docstring Generator
    "autoDocstring.startOnNewLine": true,
    "autoDocstring.quoteStyle": "'''",
    "autoDocstring.docstringFormat": "sphinx",
    "git.ignoreLimitWarning": true
}